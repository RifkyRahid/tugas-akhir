// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          Role
  position      String?
  joinDate      DateTime
  isActive      Boolean        @default(true)
  attendances   Attendance[]
  leaveRequests LeaveRequest[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  // NEW
  areaId        Int?
  area          AttendanceArea? @relation(fields: [areaId], references: [id])
}


model Attendance {
  id          String           @id @default(uuid())
  user        User             @relation(fields: [userId], references: [id])
  userId      String
  date        DateTime
  checkIn     DateTime?
  checkOut    DateTime?
  status      AttendanceStatus
  keterangan  String?
  lateMinutes Int?
  latitude    Float?
  longitude   Float?
  photo       String?
  createdAt   DateTime         @default(now())
  areaId      Int?
  area        AttendanceArea?  @relation(fields: [areaId], references: [id])
  @@unique([userId, date]) 
}


model LeaveRequest {
  id         String       @id @default(uuid())
  user       User         @relation(fields: [userId], references: [id])
  userId     String
  type       LeaveType
  startDate  DateTime
  endDate    DateTime
  reason     String
  status     LeaveStatus  @default(pending)
  attachment String?
  createdAt  DateTime     @default(now())
}

model EventReminder {
  id          String    @id @default(uuid())
  title       String
  date        DateTime
  description String?
  type        EventType @default(OTHER)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model AttendanceArea {
  id        Int      @id @default(autoincrement())
  name      String
  alamat    String?
  latitude  Float
  longitude Float
  radius    Int
  isActive  Boolean  @default(true)
  attendances Attendance[]
  users     User[]                  // NEW â†’ relasi balik ke User
  createdAt DateTime @default(now())
}

enum EventType {
  MEETING
  BIRTHDAY
  HOLIDAY
  OTHER
}

enum Role {
  admin
  karyawan
}

enum AttendanceStatus {
  hadir
  izin
  sakit
  cuti
  alpha
  pending
}

enum LeaveType {
  izin
  sakit
  cuti
}

enum LeaveStatus {
  pending
  disetujui
  ditolak
}

model AppConfig {
  id            Int      @id @default(autoincrement())
  startWorkTime String   @default("09:00")
  endWorkTime   String   @default("17:00")
  updatedAt     DateTime @updatedAt
}